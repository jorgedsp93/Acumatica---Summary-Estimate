function _timeOffKey_(empId, startDate, endDate, type, to) {
  return [
    String(empId || '').trim(),
    _asYMD(startDate),
    _asYMD(endDate),
    String(type || '').trim().toLowerCase(),
    String(to || '').trim().toLowerCase()
  ].join('|');
}

